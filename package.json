{
  "name": "pick-a-pint",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "node-sass-chokidar": "^1.3.0",
    "npm-run-all": "^4.1.3",
    "prop-types": "^15.6.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "^3.3.0"
  },
  "scripts": {
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "build-js": "REACT_APP_ENVIRONMENT=$ENVIRONMENT react-scripts build -- --production",
    "build": "npm-run-all build-css build-js",
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css": "yarn run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "test": "npm-run-all build-css --parallel test-ci test:lint:js",
    "test-watch": "react-scripts test --env=jsdom",
    "test-ci": "react-scripts test --env=jsdom --forceExit",
    "test:lint:js": "eslint --ext=js --ext=jsx src",
    "test-coverage": "react-scripts test --env=jsdom --coverage --forceExit",
    "eject": "react-scripts eject",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "node-sass": "^4.9.2",
    "prettier": "1.14.2",
    "sass-loader": "^7.0.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "src/**/**/*.{js,jsx}",
      "!src/index.js",
      "!src/registerServiceWorker.js",
      "!src/setupTests.js",
      "!src/tempPolyfills.js"
    ]
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "npm run test:lint:js"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
